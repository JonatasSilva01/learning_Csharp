@page
@model Aluno.Pages.Estudantes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar novo aluno</h1>

<h4>Alunos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Alunos.Nome" class="control-label"></label>
                <input asp-for="Alunos.Nome" class="form-control" />
                <span asp-validation-for="Alunos.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alunos.Nacimento" class="control-label"></label>
                <input asp-for="Alunos.Nacimento" class="form-control" />
                <span asp-validation-for="Alunos.Nacimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alunos.Genero" class="control-label"></label>
                <input asp-for="Alunos.Genero" class="form-control" />
                <span asp-validation-for="Alunos.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alunos.Notas" class="control-label"></label>
                <input asp-for="Alunos.Notas" class="form-control" />
                <span asp-validation-for="Alunos.Notas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
